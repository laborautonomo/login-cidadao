{% extends "LoginCidadaoCoreBundle:Dev:base.html.twig" %}

{% block content %}
    <div id="client_id" class="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">{{ 'Services'|trans }}</h2>
            </div>
            <div class="panel-body">
                <div class="row clearfix">
                    <div class="col-md-12">
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>{{ 'Actions' | trans }}</th>
                                <th>{{ knp_pagination_sortable(pagination, 'Service', 'c.name') }}</th>
                                <th>{{ knp_pagination_sortable(pagination, 'URL', 'c.siteUrl') }}</th>
                            </tr>

                            {% for service in pagination %}
                                <tr {% if loop.index is odd %}class="color"{% endif %}>
                                    <td>
                                        <a title="{{ 'Edit'|trans }}" class="btn btn-warning edit-row-grid"
                                           href="{{ path('lc_dev_client_edit', {id: service.id}) }}">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                            <span class="label-action-column-grid">{{ 'edit'|trans }} </span>
                                        </a>
                                    </td>
                                    <td>{{ service.name }}</td>
                                    <td>{{ service.siteUrl }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                        <div class="navigation text-center">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock content %}
